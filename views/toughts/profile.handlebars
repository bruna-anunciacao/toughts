<div class="dashboard">
    <div class="titleContainer">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Crie um pensamento</a>
    </div>
    <h3>Seus pensamentos</h3>
    <ul>
        {{#each toughts}}
        <li>
            <span class="label">{{this.title}}</span>
            <span class="actions">
                <a href="/toughts/edit/{{this.id}}" class="btn btnEdit  ">Editar</a>
                <form action="/toughts/remove" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Excluir" class="btn btnDelete">
                </form>
            </span>
        </li>
        {{/each}}
    </ul>
    {{#if emptyToughts}}
        <p>Você ainda não escreveu nenhum pensamento. <a href="/toughts/add">Escreva um por aqui!</a></p>
    {{/if}}
</div>
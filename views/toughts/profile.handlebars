<div class="dashboard">
    <div class="titleContainer">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Crie um pensamento</a>
    </div>
    <h3>Seus pensamentos</h3>
    <ul>
        {{#each toughts}}
        <li>
            <span class="label">{{this.title}}</span>
            <span class="actions">
                <a href="/" class="btn btnEdit  ">Editar</a>
                <form action="/">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Excluir" class="btn btnDelete">
                </form>
            </span>
        </li>
        {{/each}}
    </ul>
</div>